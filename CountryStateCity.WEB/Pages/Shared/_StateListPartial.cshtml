@using CountryStateCity.WEB.ViewModels;
@model List<StateViewModel>
@{

}


<h2>State</h2>
<input class="form-control" id="stateInput" type="text" placeholder="Search..">
@if (Model.Count > 0)
{
<br>
    <ul class="list-group list-unstyled list-item-pointer list-container" id="stateList">
    @foreach (var state in Model)
    {
        <li>
                <a class="list-group-item state-link" data-state-id="@state.Id" data-url="@Url.Page("Index", "GetCities")">@state.Name
                    @if (!string.IsNullOrEmpty(@state.StateCode)){
                        <span class="text-success">(@state.StateCode)</span>
                    }
                    <i class="fas fa-arrow-right text-danger float-end"></i></a>
        </li>
    }
</ul>
}
else{
    <p class="mt-3">No State Found</p>
}